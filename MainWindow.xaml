<Window x:Class="WPF_PROJECT_CALENDER.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_PROJECT_CALENDER"
        mc:Ignorable="d"
        Title="MainWindow" Height="899" Width="800">
    <Grid>
        <StackPanel>
        <Viewbox Stretch="Fill">
            <Calendar SelectedDate="01.01.2027" x:Name="mycalender" DisplayMode="Month"
                      SelectedDatesChanged="mycalender_SelectedDatesChanged">
                  
            </Calendar>
        </Viewbox>
        <TextBlock x:Name="mytextblock"></TextBlock>
        </StackPanel>
    </Grid>
</Window>
